<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - پایانه اطلاع رسانی</title>

    <!-- Bootstrap RTL -->
    <link href="~/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="~/css/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <style>
       
        :root {
            --primary-color: #4361ee;
            --secondary-color: #3a0ca3;
            --glass-bg: rgba(255,255,255,0.25);
            --glass-border: rgba(255,255,255,0.18);
            --shadow: 0 8px 32px 0 rgba(31,38,135,0.37);
        }

        html, body {
            height: 100%;
            margin: 0;
            font-family: Vazir, sans-serif;
            background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('@Url.Content("~/img/bg.jpg")') center center / cover no-repeat fixed;
            color: #fff;
            display: flex;
            flex-direction: column;
        }

        /* کل ساختار صفحه سه‌تکه */
        .page-container {
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        .header {
            background: rgba(0,0,0,0.7);
            backdrop-filter: blur(10px);
            padding: 20px;
            text-align: center;
            font-size: 1.8rem;
            font-weight: bold;
            border-bottom: 1px solid var(--glass-border);
            flex-shrink: 0; /* ثابت بالا */
        }

        .footer {
            background: rgba(0,0,0,0.7);
            backdrop-filter: blur(10px);
            padding: 15px;
            text-align: center;
            border-top: 1px solid var(--glass-border);
            font-size: 0.95rem;
            flex-shrink: 0; /* ثابت پایین */
        }

        .main {
            flex: 1; /* وسط پر بشه */
            overflow-y: auto; /* فقط وسط اسکرول بخوره */
            padding: 20px;
        }

            /* استایل اسکرول بار */
            .main::-webkit-scrollbar {
                width: 8px;
            }

            .main::-webkit-scrollbar-track {
                background: rgba(255, 255, 255, 0.1);
                border-radius: 10px;
            }

            .main::-webkit-scrollbar-thumb {
                background: rgba(67, 97, 238, 0.6);
                border-radius: 10px;
            }

                .main::-webkit-scrollbar-thumb:hover {
                    background: rgba(67, 97, 238, 0.8);
                }


        .back-to-top-btn {
            position: fixed;
            bottom: 30px;
            left: 30px;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: linear-gradient(135deg, rgba(67, 97, 238, 0.9), rgba(58, 12, 163, 0.9));
            border: 2px solid rgba(255, 255, 255, 0.3);
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
            display: none;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
            box-shadow: 0 5px 20px rgba(67, 97, 238, 0.4);
            z-index: 1000; /* این خط رو اضافه کن */
            animation: float 3s ease-in-out infinite;
        }

            .back-to-top-btn:hover {
                transform: translateY(-5px);
                background: linear-gradient(135deg, rgba(67, 97, 238, 1), rgba(58, 12, 163, 1));
                box-shadow: 0 8px 25px rgba(67, 97, 238, 0.6);
                border-color: rgba(255, 255, 255, 0.5);
            }

        @@keyframes float {
            0% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-15px);
            }

            100% {
                transform: translateY(0px);
            }
        }

    </style>
</head>
<body>
    <div class="page-container">
        <!-- هدر بالا -->
        <div class="header">
            پایانه اطلاع رسانی استانداری استان مازندران
        </div>

        <!-- بخش وسط با اسکرول -->
        <div class="main">
            @RenderBody()
        </div>

        <!-- فوتر پایین -->
        <div class="footer">
            <p id="footer-text"></p>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const year = new Date().toLocaleDateString("fa-IR-u-ca-persian").split("/")[0];
        document.getElementById("footer-text").innerHTML = `© ${year} توسعه و پیاده‌سازی توسط گروه مهندسی ای کن - مازندران`;
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
