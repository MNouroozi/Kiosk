@{
    ViewData["Title"] = "صفحه اصلی";
    Layout = "_Layout";
}

<div class="container text-center">
    <div class="row g-4 justify-content-center align-items-center" style="min-height:60vh;">
        <div class="col-12 col-sm-6 col-md-4 d-flex justify-content-center">
            <div class="card-glass" onclick="location.href='/Letter/Index'">
                <i class="bi bi-file-earmark-text card-icon"></i>
                <h5>پیگیری نامه</h5>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-md-4 d-flex justify-content-center">
            <div class="card-glass" onclick="location.href='/PersonelLocation/Index'">
                <i class="bi bi-geo-alt card-icon"></i>
                <h5>جستجوی مکان پرسنل</h5>
            </div>
        </div>
    </div>
</div>

<style>
    .card-glass {
        background: rgba(255, 255, 255, 0.08);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 25px;
        padding: 40px 25px;
        text-align: center;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
        height: 250px;
        width: 250px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        backdrop-filter: blur(15px);
    }

        .card-glass:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 35px rgba(0, 0, 0, 0.3);
            background: rgba(255, 255, 255, 0.12);
        }

    .card-icon {
        font-size: 4rem;
        color: rgba(255, 255, 255, 0.95);
        margin-bottom: 20px;
        transition: all 0.3s ease;
        text-shadow: 0 3px 10px rgba(0, 0, 0, 0.3);
        animation: gentleFloat 3s ease-in-out infinite;
    }

    @@keyframes gentleFloat {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-5px);
        }
    }

    .card-glass:hover .card-icon {
        transform: scale(1.1);
        color: rgba(255, 255, 255, 1);
        text-shadow: 0 5px 15px rgba(0, 0, 0, 0.4);
    }

    .card-glass h5 {
        font-size: 1.4rem;
        font-weight: 600;
        color: rgba(255, 255, 255, 0.95);
        margin: 0;
        transition: all 0.2s ease;
    }

    .card-glass:hover h5 {
        color: rgba(255, 255, 255, 1);
        transform: translateY(-1px);
    }

    @@media (max-width: 768px) {
        .card-glass {
            height: 200px;
            width: 200px;
            padding: 30px 20px;
        }

        .card-icon {
            font-size: 3rem;
        }

        .card-glass h5 {
            font-size: 1.1rem;
        }
    }
</style>