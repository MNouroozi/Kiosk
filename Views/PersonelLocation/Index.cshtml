@{
    ViewData["Title"] = "موقعیت پرسنل";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center position-relative">
    <div class="row justify-content-center align-items-center">
        <div class="col-12 col-md-8 col-lg-6">
            <!-- کارت شیشه‌ای اصلی -->
            <div class="card-glass-large fade-in" id="searchCard">
                <div class="text-center mb-4">
                    <h3 class="tracking-title">جستجوی موقعیت پرسنل</h3>
                </div>

                <i class="bi bi-geo-alt tracking-icon-large"></i>
                <p class="tracking-description-light">برای یافتن موقعیت پرسنل، نام یا کد پرسنلی را وارد کنید.</p>

                <form id="personnelForm" class="mt-4">
                    <div class="mb-4">
                        <input type="text" id="personnelName" class="form-control-glass form-control-lg"
                               placeholder="نام یا کد پرسنلی" required>
                    </div>

                    <!-- دکمه‌ها -->
                    <div class="d-flex gap-3">
                        <button type="submit" class="btn-glass-primary btn-lg flex-fill">
                            <i class="bi bi-search me-2"></i> جستجو
                        </button>
                        <button type="button" class="btn-glass-secondary btn-lg flex-fill" onclick="goToHome()">
                            <i class="bi bi-house-door"></i> منوی اصلی
                        </button>
                    </div>
                </form>
            </div>

            <!-- بخش نمایش نتایج -->
            <div id="resultsContainer" class="card-glass-large fade-in" style="display: none;">
                <h4 class="text-center mb-4 text-white">نتایج جستجو</h4>

                <div class="loading text-white" id="loading">
                    <div class="spinner-border text-light" role="status">
                        <span class="visually-hidden">در حال جستجو...</span>
                    </div>
                    <p class="mt-2">در حال جستجو...</p>
                </div>

                <div id="resultsContent">
                    <div id="personnelResults">
                        <!-- نتایج اینجا نمایش داده می‌شوند -->
                    </div>
                    <div id="noResults" class="text-center py-4 text-white" style="display: none;">
                        <i class="bi bi-person-x text-warning" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">نتیجه‌ای یافت نشد</h5>
                        <p class="text-light">پرسنل با مشخصات وارد شده یافت نشد.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --primary-color: #4361ee;
        --secondary-color: #3a0ca3;
        --glass-bg: rgba(255, 255, 255, 0.15);
        --glass-border: rgba(255, 255, 255, 0.2);
        --shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
    }

    .card-glass-large {
        background: var(--glass-bg);
        backdrop-filter: blur(16px);
        border: 1px solid var(--glass-border);
        border-radius: 25px;
        padding: 50px 40px;
        text-align: center;
        box-shadow: var(--shadow);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        width: 100%;
        min-height: 500px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin-bottom: 30px;
    }

    #resultsContainer {
        min-height: auto;
        padding: 30px;
        margin-top: 20px;
    }

    .tracking-icon-large {
        font-size: 5rem;
        color: rgba(255, 255, 255, 0.9);
        margin-bottom: 30px;
    }

    .tracking-title {
        font-family: Vazir, sans-serif;
        font-weight: 700;
        font-size: 2rem;
        margin-bottom: 20px;
        color: white;
    }

    .tracking-description-light {
        font-size: 1.2rem;
        margin-bottom: 30px;
        color: rgba(255, 255, 255, 0.9);
        line-height: 1.6;
    }

    .form-control-glass {
        text-align: center;
        border-radius: 15px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        padding: 20px 25px;
        font-size: 1.3rem;
        background: rgba(255, 255, 255, 0.1);
        color: white;
        backdrop-filter: blur(10px);
    }

        .form-control-glass::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

    .btn-glass-primary {
        background: linear-gradient(135deg, rgba(67, 97, 238, 0.85), rgba(58, 12, 163, 0.85));
        border: none;
        border-radius: 50px;
        padding: 20px 45px;
        font-size: 1.4rem;
        color: white;
        box-shadow: 0 5px 20px rgba(67, 97, 238, 0.3);
    }

    .btn-glass-secondary {
        background: linear-gradient(135deg, rgba(255, 215, 0, 0.7), rgba(218, 165, 32, 0.7));
        border: none;
        border-radius: 50px;
        padding: 20px 45px;
        font-size: 1.4rem;
        color: white;
        box-shadow: 0 5px 20px rgba(255, 215, 0, 0.25);
    }

    .personnel-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 30px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        margin-bottom: 20px;
    }

    .personnel-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 2rem;
        color: white;
    }

    .personnel-info {
        text-align: center;
    }

    .personnel-name {
        font-size: 1.5rem;
        font-weight: 700;
        color: white;
        margin-bottom: 10px;
    }

    .personnel-position {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 20px;
    }

    .location-info {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        padding: 20px;
        margin-top: 20px;
    }

    .location-item {
        display: flex;
        justify-content: space-between;
        padding: 10px 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

        .location-item:last-child {
            border-bottom: none;
        }

    .location-label {
        color: rgba(255, 255, 255, 0.7);
    }

    .location-value {
        color: white;
        font-weight: 600;
    }

    .fade-in {
        animation: fadeIn 0.8s ease forwards;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    function goToHome() {
        window.location.href = '/Home/Index';
    }

    document.getElementById('personnelForm').addEventListener('submit', function(e) {
        e.preventDefault();
        const name = document.getElementById('personnelName').value.trim();

        if (!name) {
            alert('لطفاً نام یا کد پرسنلی را وارد کنید');
            return;
        }

        searchPersonnel(name);
    });

    function searchPersonnel(name) {
        document.getElementById('loading').style.display = 'block';
        document.getElementById('resultsContent').style.display = 'none';
        document.getElementById('resultsContainer').style.display = 'block';

        // شبیه‌سازی پاسخ سرور
        setTimeout(() => {
            const sampleData = [
                {
                    id: 1,
                    fullName: "محمد محمدی",
                    position: "مدیر فناوری اطلاعات",
                    personnelCode: "1001",
                    building: "ساختمان مرکزی",
                    floor: "طبقه سوم",
                    room: "اتاق ۳۰۱",
                    avatarText: "م"
                },
                {
                    id: 2,
                    fullName: "علی احمدی",
                    position: "کارشناس منابع انسانی",
                    personnelCode: "1002",
                    building: "ساختمان اداری",
                    floor: "طبقه دوم",
                    room: "اتاق ۲۰۵",
                    avatarText: "ع"
                }
            ];

            const filteredResults = sampleData.filter(person =>
                person.fullName.includes(name) ||
                person.personnelCode.includes(name)
            );

            displayResults(filteredResults);
        }, 1500);
    }

    function displayResults(data) {
        const resultsContainer = document.getElementById('personnelResults');
        const noResults = document.getElementById('noResults');

        resultsContainer.innerHTML = '';
        document.getElementById('loading').style.display = 'none';
        document.getElementById('resultsContent').style.display = 'block';

        if (data.length === 0) {
            noResults.style.display = 'block';
            return;
        }

        noResults.style.display = 'none';

        data.forEach(person => {
            const cardHTML = `
                <div class="personnel-card fade-in">
                    <div class="personnel-avatar">${person.avatarText}</div>
                    <div class="personnel-info">
                        <h3 class="personnel-name">${person.fullName}</h3>
                        <p class="personnel-position">${person.position}</p>
                    </div>
                    <div class="location-info">
                        <div class="location-item"><span class="location-label">کد پرسنلی:</span><span class="location-value">${person.personnelCode}</span></div>
                        <div class="location-item"><span class="location-label">ساختمان:</span><span class="location-value">${person.building}</span></div>
                        <div class="location-item"><span class="location-label">طبقه:</span><span class="location-value">${person.floor}</span></div>
                        <div class="location-item"><span class="location-label">اتاق:</span><span class="location-value">${person.room}</span></div>
                    </div>
                </div>
            `;
            resultsContainer.innerHTML += cardHTML;
        });

        // اسکرول به وسط صفحه
        setTimeout(() => {
            document.getElementById('resultsContainer').scrollIntoView({
                behavior: 'smooth',
                block: 'center'
            });
        }, 300);
    }
</script>
